{
  "compilerOptions": {
    "module": "ESNext", // Usar ESNext o ES2020 para módulos
    "target": "ESNext", // Opcional, depende de tu entorno de ejecución
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
